/*
 * Global
 * Elementos globais que podem ser extendidos ao longo do documento
 */
.container
    container()

:root
    --primary: color1_bg
    --primary-hover: color1_bg_hover
    --primary-contrast: color1_font
    --primary-hover-contrast: color1_font_hover
    --secundary: color2_bg
    --secundary-hover: color2_bg_hover
    --secundary-contrast: color2_font
    --secundary-hover-contrast: color2_font_hover
    --tertiary: color3_bg
    --tertiary-hover: color3_bg_hover
    --tertiary-contrast: color3_font
    --tertiary-hover-contrast: color3_font_hover
    --button: button_bg
    --button-hover: button_bg_hover
    --button-contrast: button_font
    --button-hover-contrast: button_font_hover
    // Socials
    --youtube: #cc0404
    --facebook: #3b5998
    --twitter: #00aced
    --pinterest: #cb2027
    --thumblr: #32506d
    --linkedin: #007bb5
    --instagram: #e4405f

/*
 * Base
 * Estilo base do elementos do Html
 */
body
    font-family: font
    -moz-osx-font-smoothing: grayscale
    -webkit-font-smoothing: antialiased

.wrapper-container
    overflow: visible

.wrapper
    display: flex
    flex-flow: column nowrap

    .head
        order: -3

    .header-container
        order: -2

    .main-container
        flex: 1
        min-height: 0

.js-stickybit-parent
    padding-top: 140px

/*
 * Components
 * Componentes que se adaptam ao contexto
 */
/*
 * Component - Menssagens
 */
.messages
    > li
        display: block
        margin-bottom: 20px
        padding: 10px 20px
        font-size: 14px

    .success-msg
        border: 1px solid #2baf60
        background: #c8efc0
        color: #1d904b

    .error-msg
        border: 1px solid #d92100
        background: #ffdcdc
        color: #d92100

    .notice-msg
        border: 1px solid #f7be07
        background: #f9f0d5
        color: #f7be07

// Container
.header, .main-container, .footer
    container()

.categories .ul--0
    max-width: viewport

svg
    fill: currentColor

.cart-table .qty-wrapper .bt
    background: var(--primary)
    color: var(--primary-contrast)

    &:hover
        background: var(--primary-hover)
        color: var(--primary-hover-contrast)

.cart-table .btn-empty
    background: var(--primary-contrast)
    color: var(--primary)

    &:hover
        background: var(--primary-hover-contrast)
        color: var(--primary-hover)

.btn--outline
    background: var(--primary-contrast)
    box-shadow: inset 0 0 0 1px var(--primary)
    color: var(--primary)

    &:hover
        background: var(--primary)
        color: var(--primary-contrast)
#banner__home_banner_full
    margin-top: -16px

    @media media-max-lg
        order: -1

#banner__rulers
    margin-top: -16px
    background: var(--primary-hover)

    .ruler
        display: flex
        justify-content: center
        align-items: center
        margin-right: 10px
        color: var(--primary-hover-contrast)
        font-weight: light
        font-size: 19px

        @media media-max-sm
            font-size: 12px

        .ico
            margin-right: 15px
            width: 30px
            height: 30px
            color: var(--secundary)

            @media media-max-sm
                margin-right: 5px
                width: 20px
                height: 20px

        .z-truck
            width: 68px

            @media media-max-sm
                width: 58px
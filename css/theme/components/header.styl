.header
    padding: (gap / 2) 0

    &-container
        position: sticky
        top: 0

        @media media-max-sm
            margin-bottom: 60px !important

    .logo
        margin-right: (gap / 2)

    .search
        flex: 0 1 390px
        margin-right: (gap / 2)

        @media media-min-lg
            margin: 0 30px

    .myaccount, .mycart, .mywish
        &__header
            a
                display: flex
                justify-content: center
                align-items: center
                width: 40px
                height: 40px

            .ico
                width: auto
                height: 23px

        &__content
            display: none !important

    .mycart
        @media media-max-sm
            margin-left: auto

    .store
        margin-left: 10px

        @media media-max-sm
            display: none

        a
            display: flex
            justify-content: center
            align-items: center
            height: 40px
            text-transform: uppercase
            font-size: 15px